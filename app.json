{
  "expo": {
    "name": "BMGInventory",
    "slug": "BMGInventory",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icons/invoice.png",
    "scheme": "BMGInventory",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/invoice.png",
        "backgroundColor": "#3B82F6" 
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/icons/invoice.png"
    },
    "splash": {  
      "image": "./assets/icons/invoice.png",
      "resizeMode": "contain",
      "backgroundColor": "#3B82F6"  
    },
    "plugins": [
      "expo-router",
      "expo-asset"  
    ],
    "experiments": {
      "typedRoutes": true
    }
  }}